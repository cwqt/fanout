{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": "npm --prefix functions run build"
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/ping",
        "function": "ping"
      },
      {
        "source": "/endpoints",
        "function": "endpoints"
      },
      {
        "source": "/mux",
        "function": "mux"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true
    }
  }
}
